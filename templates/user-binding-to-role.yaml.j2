{% for role in k8s_rbac_role_to_binding %}
{% if role.action == "create" %}
kind: RoleBinding
apiVersion: rbac.authorization.k8s.io/v1beta1
metadata:
  name: {{ role.role }}-binding-{{role.user}}
  namespace: {{ role.namespace }}
subjects:
- kind: ServiceAccount
  name: {{ role.user }}
  namespace: {{ role.namespace }}
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: Role
  name: {{ role.role }}
{% endif %}
{% endfor %}
