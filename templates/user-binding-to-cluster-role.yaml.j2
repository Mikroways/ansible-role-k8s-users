kind: ClusterRoleBinding
apiVersion: rbac.authorization.k8s.io/v1
metadata:
  name: {{ cluster_role }}-binding-{{ user }}
  namespace: {{ namespace }}
subjects:
- kind: ServiceAccount
  name: {{ user }}
  namespace: {{ namespace }}
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: {{ cluster_role }}