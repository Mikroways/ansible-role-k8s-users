{% for role in k8s_rbac_cluster_role %}
{% if role.action == "create" %}
apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRoleBinding
metadata:
  name: {{ role.name }}-binding
subjects:
- kind: ServiceAccount 
  name: {{ role.user }}
  namespace: default
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: {{ role.name }}
{% endif %}
{% endfor %}
